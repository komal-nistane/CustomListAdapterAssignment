<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.DetailedViewFragment"
    android:background="@color/colorBlue"
    >
    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/employeeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginLeft"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employeeImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/employeeImage"
                android:text="@string/Name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize"


                />

            <TextView
                android:id="@+id/empName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/employeeImage"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_toRightOf="@+id/name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1">

            <TextView
                android:id="@+id/desig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/marginTop"
                android:text="@string/designation"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/empProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_marginLeft="@dimen/rightTo"
                android:layout_toRightOf="@+id/desig"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>